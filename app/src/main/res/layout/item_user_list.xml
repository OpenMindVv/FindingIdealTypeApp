<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/list_shape"
    android:elevation="3dp"
    android:shape="rectangle">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_thumb"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="263dp"
        app:layout_constraintEnd_toStartOf="@+id/message_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="JENNIERUBYJANE"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_thumb"
        app:layout_constraintTop_toTopOf="@+id/imageView_thumb" />

    <ImageButton
        android:id="@+id/message_button"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="28dp"
        android:adjustViewBounds="true"
        android:background="#FFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_thumb"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/send" />


</androidx.constraintlayout.widget.ConstraintLayout>